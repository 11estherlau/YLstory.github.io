html,
body,
h1,
h2,
p,
ul,
li {
  margin: 0;
  padding: 0;
}

body {
  font-family: Arial, sans-serif;
  background-color: #fff;
  color: #333;
  line-height: 1.6;
}

header {
  background-color: #f0fff0;
  color: #333;
  padding: 35px;
}

nav ul {
  list-style-type: none;
}

nav ul li {
  display: inline-block;
  margin-right: 10px;
}

nav ul li a {
  color: #333;
  text-decoration: none;
}

#story {
  background-color: #f0fff0; 
}


h1 {
  margin-bottom: 10px;
  font-size: 30px;
}

ul {
  list-style-type: disc;
  margin-left: 20px;
}

footer {
  background-color: #f0fff0;
  color: #333;
  padding: 10px;
  text-align: center;
}

.box {
  display: inline-block;
  border: 1px solid black;
  padding: 0.5em;
  font-size: 16px;
  line-height: 1.2;
  box-sizing: content-box;
  box-shadow: 2px 2px 4px #f2f2f2;
}

.box p {
  margin: 0;
}

.button {
  float: right;
  margin-right: 20px;
  padding-left: 10px;
  padding-right: 10px;
  letter-spacing: 3px;
  box-sizing: content-box;
  border-radius: 90%;
  border-radius: 10px;
  box-shadow: 2px 2px 8px rgba(5, 5, 5, 0.893);
}

.button2 {
  float: center;
  margin-right: 20px;
  padding-left: 10px;
  padding-right: 10px;
  letter-spacing: 3px;
  box-sizing: content-box;
  box-shadow: 4px 4px 2px rgba(2, 2, 2, 0.582);
}

.button2:hover {
  background-color: #f5f5f5;
  color: #f5f5f5;
}

.button3 {
  float: left;
  margin-right: 20px;
  padding-left: 10px;
  padding-right: 10px;
  letter-spacing: 3px;
  box-sizing: content-box;
  box-shadow: 4px 4px 10px rgba(2, 2, 2, 0.582);
  border-radius: 6px;
}

.button3:hover {
  background-color: #fff;
  color: #fff;
  box-shadow: 0 5px;
  transition: 0.5s;
}

p {
  margin-bottom: 17px;
  line-height: 1.5;
  padding-bottom: 17px;
  text-indent: 2em;
}


html::-webkit-scrollbar {
  width: 10px;
  height: 1px;
}

html::-webkit-scrollbar-track {
  box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  background: #ededed;
  border-radius: 10px;
}

html::-webkit-scrollbar-thumb {
  border-radius: 10px;
  background-color: skyblue;
  background-image: -webkit-linear-gradient(
    45deg,
    rgba(255, 255, 255, 0.2) 25%,
    transparent 25%,
    transparent 50%,
    rgba(255, 255, 255, 0.2) 75%,
    transparent 75%,
    transparent
    );
}

html::-webkit-scrollbar-thumb:hover {
  background: rgb(100, 100, 100);
  border-radius: 10px;
}

html::-webkit-scrollbar-thumb:active {
  background: rgb(68, 68, 68);
  border-radius: 10px;
}
